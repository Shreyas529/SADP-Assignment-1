# Compiler and flags
CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra

# Target binary name
TARGET = examApp

# Find all .c++ files in project
SRC = $(wildcard *.c++ \
                gate_factory/*.c++ \
                jee_factory/*.c++ \
				neet_factory/*.c++ )

# Generate object files list
OBJ = $(SRC:.c++=.o)

# Default target
all: $(TARGET)

# Link the program
$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) $(OBJ) -o $(TARGET)
	@echo "âœ… Build complete: $(TARGET)"

# Compile .c++ to .o
%.o: %.c++
	$(CXX) $(CXXFLAGS) -c $< -o $@
	@echo "ðŸ”¨ Compiled: $<"

# Clean build artifacts
clean:
	rm -f $(OBJ) $(TARGET)
	@echo "ðŸ§¹ Cleaned!"

# Rebuild everything
rebuild: clean all